---
type data = {
  link: string
  icon: string
  name: string
}

interface Props {
  links: data[]
}

const { links } = Astro.props
---

<nav class="lg:flex justify-center gap-3 w-fit items-end text-sm font-semibold hidden">
  {
    links.map((link) => (
      <a
        href={`/#${link.link}`}
        class="hover:bg-amber-700 transition ease-in delay-75 hover:bg-opacity-60 dark:hover:bg-amber-500 dark:hover:bg-opacity-70 p-2 py-[2px] rounded-sm">
        {link.name}
      </a>
    ))
  }
</nav>
