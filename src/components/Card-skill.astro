---
interface Props{
  skill:string[]
}
const {skill} = Astro.props
---

<div class="grid place-items-center rounded-lg bg-slate-800 dark:bg-slate-700 gap-3 p-1 px-2">
  <img
    class="object-contain h-8 justify-start"
    width="70"
    height="70"
    src={`/skills/${skill[0]}.svg`}
    alt={skill[1]}
  />
  <span class="font-semibold text-slate-400 dark:text-slate-300">{skill[1]}</span>
</div>
